[cursor]
style = { shape = "Block", blinking = "Always" }

[font]
{{- if eq .chezmoi.os "darwin" }}
size = 16.0
{{- else }}
size = 12.0
{{- end }}

[font.normal]
family = "Px437 IBM VGA 8x16"
style = "Regular"

[general]
import = [
    "~/.config/alacritty/themes/themes/terminal_app.toml"
]

[env]
TERM = "xterm-256color"
