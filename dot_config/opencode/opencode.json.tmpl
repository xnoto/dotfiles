{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
{{- if eq .chezmoi.os "linux" }}
  "lsp": {
    "bash": {
      "command": ["bash-language-server", "start", "--noBgAnalysis"]
    }
  },
{{- end }}
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "disable": true
    }
  },
  "mcp": {
    "mcp-optional-linear": {
      "type": "local",
      "command": [
        "bunx",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ],
      "enabled": true
    },
    "mcp-optional-notion": {
      "type": "local",
      "command": [
        "bunx",
        "mcp-remote",
        "https://mcp.notion.com/sse"
      ],
      "enabled": true
    },
    "mcp-optional-aws-api-staging": {
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-api-mcp-server@latest"
      ],
      "enabled": true,
      "environment": {
        "READ_OPERATIONS_ONLY": "true",
        "AWS_REGION": "us-east-2",
        "AWS_API_MCP_PROFILE_NAME": "staging"
      }
    },
    "mcp-optional-aws-api-prod": {
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-api-mcp-server@latest"
      ],
      "enabled": false,
      "environment": {
        "READ_OPERATIONS_ONLY": "true",
        "AWS_REGION": "us-east-2",
        "AWS_API_MCP_PROFILE_NAME": "prod"
      }
    },
    "mcp-optional-aws-doc": {
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-documentation-mcp-server@latest"
      ],
      "enabled": true,
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_DOCUMENTATION_PARTITION": "aws"
      }
    },
    "mcp-optional-github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}"
      }
    },
    "mcp-optional-grafana": {
      "type": "local",
      "command": [
        "podman",
        "run",
        "--rm",
        "-i",
        "-e",
        "GRAFANA_URL=https://hatchengineering.grafana.net",
        "-e",
        "GRAFANA_SERVICE_ACCOUNT_TOKEN",
        "docker.io/mcp/grafana:latest",
        "-t",
        "stdio"
      ],
      "enabled": true,
      "environment": {
        "GRAFANA_SERVICE_ACCOUNT_TOKEN": "{env:GRAFANA_TOKEN}"
      }
    }
  }
}
